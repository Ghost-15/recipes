{% extends '/hub/base.html.twig' %}

{% block content %}
    <html lang="fr">

    {% block title%}
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Add a Recipe</title>
            <script src="https://cdn.tailwindcss.com"></script>
        </head>
    {% endblock %}

    <body class="font-montserrat text-sm bg-white">
    <!-- /Left Menu -->

    <!-- Main Content -->
    <main class="flex-1 py-10 px-5 sm:px-10">
        <section>
            <div class="flex items-center justify-between">
                <span class="underline decoration-2 decoration-red-400 font-semibold text-gray-700 text-base">Modifie {{ value }}</span>
            </div>
        </section>

        <section class="mt-9">
{#            {% for message in app.flashes('error') %}#}
{#                <div class="alert alert-danger text-red-600"> {{ message }} </div>#}
{#            {% endfor %}#}
{#            {% for message in app.flashes('succes') %}#}
{#                <div class="alert alert-danger text-green-600"> {{ message }} </div>#}
{#            {% endfor %}#}
{#            "{{ path('app_modifie_recipe', { 'value': recipe.title }) }}"#}
            <form action="{{ path('app_update_recipe', { 'value':  value  }) }}">
                <div>
                    <label htmlFor="First name" class="block text-sm font-medium leading-6 text-gray-900">
                        Title</label>
                    <div class="mt-2">
                        <input
                                placeholder="Enter the title"
                                name="title"
                                required
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"/>
                    </div>
                </div>

                <div>
                    <label htmlFor="description" class="mt-2 block text-sm font-medium leading-6 text-gray-900">
                        Description</label>
                    <div class="mt-2">
                            <textarea
                                    id="description"
                                    placeholder="Entre la description"
                                    name="description"
                                    required
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"></textarea>
                    </div>
                </div>

                <div>
                    <label htmlFor="instruction" class="block text-sm font-medium leading-6 text-gray-900">
                        Instruction</label>
                    <div class="mt-2">
                        <textarea
                                placeholder="Entre l'instruction"
                                name="instruction"
                                required
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"></textarea>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="mt-3 flex w-full justify-center rounded-md bg-black px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-slate-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        Soumettre
                    </button>
                </div>
            </form>
        </section>
    </main>

    </body>
    </html>
{% endblock %}