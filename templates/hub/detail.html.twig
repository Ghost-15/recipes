{% extends 'hub/base.html.twig' %}

{% block content %}
<html lang="fr">

{% block title%}
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Streemi - Détail</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
{% endblock %}
<body class="font-montserrat text-sm bg-white">

        <main class="flex-1 py-10 px-5 sm:px-10">
            <section class="block">
                <h1 class="text-lg font-medium text-black">Détails de <span class="font-bold text-red-600">{{ recipe.title }}</span></h1>
            </section>
            <section class="block">
                <div class="mt-9">
                    <h2 class="text-lg font-medium text-black">description</h2>
                    <p class="text-md mt-9">{{ recipe.description }}</p>
                </div>
                <div class="mt-9">
                    <h2 class="text-lg font-medium text-black">instruction</h2>
                    <p class="text-md mt-9">{{ recipe.instruction }}</p>
                </div>
            </section>
            {% if is_granted('ROLE_ADMIN') %}
                <section class="block">
                    <a href="{{ path('app_modifie_recipe', { 'value': recipe.id }) }}" class="inline-flex items-center">
                        <h1 class="text-lg font-medium text-bleu-600 mt-9 hover:underline hover:decoration-2 hover:decoration-bleu-400">Modifier</h1>
                    </a>

                    <span class="inline-flex items-center"> ---------------- </span>

                    <a href="{{ path('app_delete_recipe', { 'value': recipe.id }) }}" class="inline-flex items-center">
                        <h1 class="text-lg font-medium text-red-600 mt-9 hover:underline hover:decoration-2 hover:decoration-red-400">Delete</h1>
                    </a>
                </section>
            {% endif %}
        </main>
</body>
</html>
{% endblock %}